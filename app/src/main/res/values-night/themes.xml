<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DeliveryEarningTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <!-- Cambia il colore della barra di stato -->
        <item name="android:statusBarColor">@color/deliveroo_blue</item>
        <!-- Mantieni il testo della barra di stato leggibile (opzionale) -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Assicurati che la barra di stato non sia traslucida -->
        <item name="android:windowTranslucentStatus">false
        </item><!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>

    <style name="Theme.DeliveryEarningTracker" parent="Base.Theme.DeliveryEarningTracker">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/deliveroo_blue</item>
        <item name="android:windowLightStatusBar">true
        </item> <!-- Facoltativo: rende il testo della status bar scuro se necessario -->
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#4CAF50</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>